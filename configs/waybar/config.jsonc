// === WEHTTAMSNAPS WAYBAR CONFIGURATION ===
// GitHub: https://github.com/Crowdrocker
// Backup status bar for WehttamSnaps

{
    // Layer to place waybar at the top
    "layer": "top",
    // Position of the bar
    "position": "top",
    // Width of the bar
    "width": 1920,
    // Height of the bar
    "height": 24,
    // Spacing between modules
    "spacing": 4,
    // Modules to include
    "modules-left": [
        "custom/logo",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "clock",
        "custom/media"
    ],
    "modules-right": [
        "tray",
        "network",
        "bluetooth",
        "pulseaudio",
        "backlight",
        "battery",
        "gamemode",
        "custom/gamemode-toggle",
        "custom/keyhints",
        "custom/power"
    ],

    // Modules configuration
    "custom/logo": {
        "format": "  ",
        "tooltip": false,
        "on-click": "exec ~/.config/wehttamsnaps/scripts/welcome.py"
    },

    "hyprland/workspaces": {
        "format": "{name}: {icon}",
        "format-icons": {
            "1": "ï„ ",
            "2": "ï‰©",
            "3": "ï„¡",
            "4": "ï‡…",
            "5": "ï‡‡",
            "6": "ï‰‰",
            "7": "ïµ",
            "8": "ï„›",
            "9": "ï€ˆ",
            "10": "ï„¨"
        }
    },

    "hyprland/window": {
        "format": "{}",
        "max-length": 50,
        "rewrite": {
            "(.*) - Mozilla Firefox": "ğŸŒ $1",
            "(.*) - Visual Studio Code": "ï„¡ $1",
            "(.*) - Ghostty": "ï„  $1",
            "(.*) - Steam": "ğŸ® $1"
        }
    },

    "clock": {
        "format": "ï€— {:%H:%M}",
        "format-alt": "ğŸ“… {:%Y-%m-%d}",
        "tooltip-format": "{:%Y-%m-%d %H:%M:%S}",
        "calendar": {
            "mode"          : "month",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "on-click-right": "mode",
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#ffead3'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffead3'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },

    "custom/media": {
        "format": "{icon} {}",
        "format-icons": {
            "spotify": "ï†¼",
            "default": "ğŸµ"
        },
        "max-length": 40,
        "exec": "playerctl -a metadata --format '{{title}} - {{artist}}' 2>/dev/null || echo ''",
        "interval": 5,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next"
    },

    "tray": {
        "icon-size": 16,
        "spacing": 8
    },

    "network": {
        "format-wifi": "ğŸ“¶ {essid} ({signalStrength}%)",
        "format-ethernet": "ğŸŒ {ipaddr}/{cidr}",
        "format-disconnected": "âš ï¸ Disconnected",
        "format-alt": "ğŸŒ {ifname}",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "nm-connection-editor"
    },

    "bluetooth": {
        "format": "ïŠ” {status}",
        "format-connected": "ïŠ” {num_connections}",
        "format-disabled": "ïŠ” Disabled",
        "on-click": "blueman-manager",
        "tooltip-format": "{}"
    },

    "pulseaudio": {
        "format": "ğŸ”Š {volume}%",
        "format-bluetooth": "ğŸ”Š {volume}% (BT)",
        "format-bluetooth-muted": "ğŸ”‡ (BT)",
        "format-muted": "ğŸ”‡ Muted",
        "format-source": "ğŸ¤ {volume}%",
        "format-source-muted": "ğŸ¤ Muted",
        "on-click": "pavucontrol",
        "on-click-right": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5
    },

    "backlight": {
        "format": "â˜€ï¸ {percent}%",
        "on-scroll-up": "brightnessctl set +5%",
        "on-scroll-down": "brightnessctl set 5-",
        "device": "intel_backlight"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ğŸ”Œ {capacity}%",
        "format-plugged": "ğŸ”Œ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },

    "gamemode": {
        "format": "ğŸ® {count}",
        "format-not-active": "",
        "tooltip": "Gamemode: {count} games running",
        "hide-not-active": true
    },

    "custom/gamemode-toggle": {
        "format": "ğŸ® GameMode",
        "format-disabled": "âš¡ GameMode",
        "exec": "~/.config/wehttamsnaps/scripts/gamemode-status.sh",
        "interval": 5,
        "on-click": "~/.config/wehttamsnaps/scripts/toggle-gamemode.sh",
        "tooltip": "Click to toggle GameMode"
    },

    "custom/keyhints": {
        "format": "â“ Keybinds",
        "on-click": "~/.config/wehttamsnaps/scripts/keyhints.sh",
        "tooltip": "Click to show keyboard shortcuts"
    },

    "custom/power": {
        "format": "â»",
        "on-click": "wlogout",
        "tooltip": "Click for power menu"
    }
}