    // STL Quick Actions
    $mod $alt "t" {
        spawn "~/.config/wehttamsnaps/scripts/stl-quick-actions.sh"
    }
    
    // STL Configuration
    $mod $alt $shift "t" {
        spawn "~/.config/wehttamsnaps/scripts/stl-config.sh"
    }
    
    // STL Game Settings
    $mod $ctrl "t" {
        spawn "~/.config/wehttamsnaps/scripts/stl-game-settings.sh"
    }
}

// === MOD ORGANIZER 2 CONTROLS ===
bind-key {
    // MO2 Quick Launch
    $mod $alt "o" {
        spawn "~/.config/wehttamsnaps/scripts/mo2-quick-launch.sh"
    }
    
    // MO2 Mod Installer
    $mod $alt $shift "o" {
        spawn "~/.config/wehttamsnaps/scripts/mo2-mod-installer.sh"
