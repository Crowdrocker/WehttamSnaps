// === VORTEX CONTROLS ===
bind-key {
    // Vortex Quick Actions
    $mod $alt "v" {
        spawn "~/.config/wehttamsnaps/scripts/vortex-quick-actions.sh"
    }
    
    // Vortex Deployment
    $mod $alt $shift "v" {
        spawn "~/.config/wehttamsnaps/scripts/vortex-deploy.sh"
    }
    
    // Vortex Game Management
    $mod $ctrl "v" {
        spawn "~/.config/wehttamsnaps/scripts/vortex-games.sh"
