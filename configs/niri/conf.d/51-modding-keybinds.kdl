// === WEHTTAMSNAPS - MODDING KEYBINDINGS ===
// Comprehensive keybinds for SteamTinkerLaunch, Vortex, MO2, Wabbajack

// Define mod key combinations
let "mod" = "Super"
let "shift" = "Shift"
let "ctrl" = "Ctrl"
let "alt" = "Alt"

// === MODDING LAUNCHERS ===
bind-key {
    // SteamTinkerLaunch
    $mod $shift "t" {
        spawn "steamtinkerlaunch"
    }
    
    // Vortex Mod Manager
    $mod $shift "v" {
        spawn "vortex"
    }
    
    // Mod Organizer 2
    $mod $shift "m" {
        spawn "modorganizer2"
    }
    
    // Wabbajack
    $mod $shift "w" {
        spawn "wabbajack"
    }
    
    // LOOT (Load Order Optimization Tool)
    $mod $shift "l" {
        spawn "loot"
    }
    
    // xEdit (TESVEdit/FO4Edit/etc.)
    $mod $shift "x" {
        spawn "~/.local/share/modding/tools/launch-xedit.sh"
    }
    
    // Creation Kit
    $mod $shift "c" {
        spawn "creationkit"
    }
    
    // FNIS/Nemesis
    $mod $shift "f" {
        spawn "~/.local/share/modding/tools/launch-animation-tools.sh"
    }
}

// === MODDING WORKSPACE MANAGEMENT ===
bind-key {
    // Switch to modding workspace
    $mod $ctrl "3" {
        focus-workspace 3
    }
    
    $mod $ctrl "4" {
        focus-workspace 4
    }
    
    $mod $ctrl "5" {
        focus-workspace 5
    }
    
    // Move current window to modding workspace
    $mod $ctrl $shift "3" {
        move-column-to-workspace 3
    }
    
    $mod $ctrl $shift "4" {
        move-column-to-workspace 4
    }
    
    $mod $ctrl $shift "5" {
        move-column-to-workspace 5
    }
    
    // Modding workspace layout preset
    $mod $alt "m" {
        spawn "~/.config/wehttamsnaps/scripts/setup-modding-workspace.sh"
    }
}

// === MODDING FILE MANAGEMENT ===
bind-key {
    // Open modding directories
    $mod $ctrl "d" {
        spawn "thunar" "~/.local/share/modding/"
    }
    
    $mod $ctrl "s" {
        spawn "thunar" "~/.local/share/modding/downloads/"
    }
    
    $mod $ctrl "r" {
        spawn "thunar" "~/.local/share/modding/tools/"
    }
    
    // Open game directories
    $mod $ctrl "g" {
        spawn "~/.config/wehttamsnaps/scripts/open-game-directories.sh"
    }
    
    // Archive management
    $mod $ctrl "a" {
        spawn "~/.config/wehttamsnaps/scripts/extract-mod-archive.sh"
    }
}

// === MODDING WEB TOOLS ===
bind-key {
    // Nexus Mods webapp
    $mod $alt "n" {
        spawn "sh" "~/.config/wehttamsnaps/webapps/nexusmods.sh"
    }
    
    // LOOT webapp
    $mod $alt "l" {
        spawn "sh" "~/.config/wehttamsnaps/webapps/loot.sh"
    }
    
    // Modding Discord webapp
    $mod $alt "d" {
        spawn "sh" "~/.config/wehttamsnaps/webapps/modding-discord.sh"
    }
    
    // Modding wiki/webapp
    $mod $alt "w" {
        spawn "sh" "~/.config/wehttamsnaps/webapps/modding-wiki.sh"
    }
}

// === STEAMTINKERLAUNCH CONTROLS ===
