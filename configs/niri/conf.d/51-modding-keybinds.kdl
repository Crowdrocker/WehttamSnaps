// === WABBAJACK CONTROLS ===
bind-key {
    // Wabbajack Quick Launch
    $mod $alt "w" {
        spawn "~/.config/wehttamsnaps/scripts/wabbajack-quick-launch.sh"
    }
    
    // Wabbajack List Download
    $mod $alt $shift "w" {
        spawn "~/.config/wehttamsnaps/scripts/wabbajack-download-lists.sh"
    }
    
    // Wabbajack Installer
    $mod $ctrl "w" {
        spawn "~/.config/wehttamsnaps/scripts/wabbajack-installer.sh"
    }
}

// === MODDING TERMINAL CONTROLS ===
bind-key {
    // Open modding terminal
    $mod $ctrl $shift "enter" {
        spawn "ghostty" "--title=modding" "--working-directory=~/.local/share/modding/"
    }
    
    // Open STL terminal
    $mod $alt $shift "enter" {
        spawn "ghostty" "--title=stl" "--working-directory=~/.local/share/SteamTinkerLaunch/"
    }
    
    // Open Vortex terminal
    $mod $shift "enter" {
        spawn "ghostty" "--title=vortex" "--working-directory=~/.config/vortex/"
    }
}

// === MODDING UTILITIES ===
bind-key {
    // Backup modding setup
    $mod $ctrl $shift "b" {
        spawn "~/.config/wehttamsnaps/scripts/backup-modding-setup.sh"
    }
    
    // Restore modding setup
    $mod $ctrl $shift "r" {
        spawn "~/.config/wehttamsnaps/scripts/restore-modding-setup.sh"
    }
    
    // Clean modding cache
    $mod $ctrl $shift "c" {
        spawn "~/.config/wehttamsnaps/scripts/clean-modding-cache.sh"
    }
    
    // Update modding tools
    $mod $ctrl $shift "u" {
        spawn "~/.config/wehttamsnaps/scripts/update-modding-tools.sh"
    }
}

// === MODDING MONITORING ===
bind-key {
    // Monitor modding processes
    $mod $ctrl $shift "p" {
        spawn "ghostty" "-e" "htop" "--filter=steam|vortex|modorganizer|wabbajack"
    }
    
    // Monitor disk usage for mods
    $mod $ctrl $shift "d" {
        spawn "ghostty" "-e" "du" "-sh" "~/.local/share/modding/"
    }
    
    // Monitor downloads
    $mod $ctrl $shift "n" {
        spawn "ghostty" "-e" "watch" "ls -la ~/.local/share/modding/downloads/"
    }
}

// === GAME LAUNCH WITH MODS ===
bind-key {
    // Launch current game with mods
    $mod $ctrl $shift "g" {
        spawn "~/.config/wehttamsnaps/scripts/launch-game-with-mods.sh"
    }
    
    // Launch game without mods
    $mod $alt $shift "g" {
        spawn "~/.config/wehttamsnaps/scripts/launch-game-vanilla.sh"
    }
    
    // Switch mod profiles
    $mod $ctrl $shift "s" {
        spawn "~/.config/wehttamsnaps/scripts/switch-mod-profile.sh"
    }
}

// === MODDING HELP ===
bind-key {
    // Modding keybinds help
    $mod $shift $alt "h" {
        spawn "sh" "~/.config/wehttamsnaps/scripts/modding-keyhints.sh"
    }
    
    // Modding documentation
    $mod $shift $alt "d" {
        spawn "sh" "~/.config/wehttamsnaps/scripts/open-modding-docs.sh"
    }
}